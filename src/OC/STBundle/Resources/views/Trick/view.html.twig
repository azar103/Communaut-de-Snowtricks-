{% extends "OCSTBundle:Trick:layout.html.twig "%}


{% block navbis %}
   
   <li><a href="{{ path('ocst_homepage') }}"><span class="glyphicon glyphicon-share-alt"></span> Retour à l'accueil </a></li>

{% endblock %}

{% block body %}
<h1 class="text-center">{{trick.name}}</h1>
<section class="bg-primary" id="trick">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <a class="btn btn-primary btn-xl page-scroll" href="#page-top"><span class="glyphicon glyphicon-triangle-top"></span></a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 text-center">
                    <div class="col-xs-offset-1 col-xs-10 trick-description" id="trick">
                        {{trick.description}}<p>&nbsp;</p> <p><img src="{{ asset(trick.image.webPath) }}" alt="{{ trick.image.alt }}" width="600" height="446" /></p> <p>&nbsp;</p> <p>Voici une vid&eacute;o explicative :</p> <p>&nbsp;</p> <p><iframe src="{{trick.video.url}}" width="600" height="360" frameborder="0" allowfullscreen="allowfullscreen"></iframe></p>
                    </div>
                </div>
            </div>
        </div>
</section>
<div class="well" class="text-center">
   <div class="text-primary text-center">   {% for message in app.session.flashbag.get('info') %}
       {{message}}
    {% endfor %}
  </div>  
</div>
<div class="well">
<h3 class="text-center">Commentaires</h3>
{% if is_granted('ROLE_USER') %}
{{ include("OCSTBundle:Comment:form.html.twig") }}
{% else %}
<div class="well">
   <a href="{{path('fos_user_security_login')}}"> <h3 class="text-primary text-center">*Veuillez vous authentifier pour laisser un commentaire*  </h3></a>
</div>
{% endif %}

</div>
{% for comment in listComments %}
<p style="border:1px solid black ;padding:28px " class="bg-primary">
{{comment.message }}    
                                                 
    <div class="pull-right">
    écrit  le {{comment.date|date("m/d/Y")}} à {{comment.date|date("h:m:s") }}                                   
    </div>
</p>
<hr>
{% endfor %}
 <div class="text-center">
 <ul class="pagination">
  {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
  {% for p in range(1, nbPages) %}
    <li{% if p == page %} class="active"{% endif %}>
      <a href="{{ path('ocst_trick_view', {'page': p,'id': trick.id }) }}">{{ p }}</a>
    </li>
  {% endfor %}
</ul>
</div>
{% endblock %}

